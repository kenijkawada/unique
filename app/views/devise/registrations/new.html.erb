<div class="wrapper">
<div class="form-signin">
<h2>Photographers and Models</h2>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <div class="field">
    <%= f.label :name , for: "name", class:"form-label"%>
    <%= f.text_field :name, id: "name", class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :email ,class: "sr-only" , for: "inputEmail",class:"form-label" %>
    <%= f.email_field :email, id: "inputEmail", class: "form-control"%>
  </div>

  <div class="field">
    <%= f.label :password  , class: "sr-only" , for: "inputPassword",class:"form-label" %>
    <%= f.password_field :password,id: "inputPassword", class: "form-control"  %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation  , class: "sr-only" , for: "inputPassword_Confirmation",class:"form-label"%>
    <%= f.password_field :password_confirmation, id: "inputPassword_Confirmation", class: "form-control" %>
  </div>

  <div class="actions">
    <%= f.submit "登録する" , class: "button"%><br>
  </div>
<% end %>

<span>アカウントをお持ちですか？</span><br>
<%= link_to "ログインする", new_user_session_path %>
</div>
</div>
