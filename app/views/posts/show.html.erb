<div class="post-show-page">
  <div class="container">
    <div class="row">
      <div class="col-lg-6 col-sm-6">
        <p><%= link_to @post.user.name, user_path(@post.user_id), class: "post-username" %></p>
        <%= image_tag @post.image %>
        <p>
          <%= @post.content %>
        </p>
      </div>
      <div class="col-lg-6 col-sm-6">
      <% @comments.each do |comment| %>
        <div>
          <strong><%= comment.user.name %></strong>
          <br/>
          <p><%= comment.body %></p>
          <% if user_signed_in? && @post.user == current_user %>
            <p><%= link_to 'Delete', post_path(@post), method: :delete, data: { confirm: '削除してもよろしいですか？' } %></p>
          <% end %>
        </div>
      <% end %>
        <%= render 'comments/form', comment: @comment %>
      </div>
    </div>
  </div>
  <%= link_to '戻る', posts_path, class:"back-btn" %>
</div>
