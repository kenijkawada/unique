<div class="post-form">
<%= form_with(model: post, local: true) do |form| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :カテゴリー %>
    <%= form.select :category,[["カメラマン", "カメラマン"], ["モデル", "モデル"]] , id: :post_title %>
  </div>

  <div class="field">
    <%= form.label :写真 %>
    <%= form.file_field :image, id: :post_image %>
    <%= form.hidden_field :image_cache %>
  </div>

  <div class="field">
    <%= form.label :内容 %>
    <%= form.text_area :content, id: :post_content ,:size => "40x3" , :maxlength => "120"%>
  </div>

  <div class="actions">
    <%= form.submit :value=>"公開する" ,:class=>"btn btn-outline-primary" %>
  </div>
<% end %>
</div>
