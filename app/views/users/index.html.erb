<div class="users-index-page">

  <h2>理想のPhotographerとModelを見つけよう</h2>

  <div class="search-wrap">
    <% provide(:title, 'All posts') %>
      <%= search_form_for @search do |f| %>
      <div class="form-group">
        <%= f.label :category_cont,"カテゴリー" %>
        <%= f.select :category_cont,["カメラマン", "モデル"] , class: "form-control" %>
      </div>
      <div class="actions"><%= f.submit "検索", class:"btn btn-info btn-sm"%></div>
    <% end %>

    <%= link_to "写真一覧はこちら", posts_path, class: "link" %>
  </div>

  <% @result.each do |user| %>
    <div class="user">
      <div class="user-image">
        <% user.introductions.each do |u| %>
          <%= image_tag(u.image_url(:standard))%>
        <% end %>
      </div>
      <div class="user-content">
        <div class="user-name">
          <%= link_to user.name, user_path(user.id), class: "username" %>
          <div class="follow_form"><%= render 'follow_form', user: user %></div>
        </div>
      <div class="user-body">
        <% user.introductions.each do |user| %>
          <%= user.age %><br>
          <%= user.area %><br>
          <%= user.body %>
        <% end %>
      </div>
    </div>
    </div>
    <br>
  <% end %>
</div>
